<project name="hsTypesDistribution" default="build">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/hsTypesDistribution" />
  <property name="build.layout" location="${build.dir}/artifacts/hsTypesDistribution" />
  <property name="mps_home" location="" />
  <property name="version" value="2.5" />
  <property name="artifacts.hsTypes" location="${build.dir}/artifacts/hsTypes" />
  <property file="${artifacts.hsTypes}/build.properties" prefix="import.hsTypes" />
  <property name="hsTypes.date" value="${import.hsTypes.hsTypes.date}" />
  <property name="hsTypes.build.number" value="${import.hsTypes.hsTypes.build.number}" />
  <property name="mpsBootstrapCore.version" value="${import.hsTypes.mpsBootstrapCore.version}" />
  
  <target name="assemble" depends="fetchDependencies">
    <mkdir dir="${build.layout}" />
    <zip destfile="${build.layout}/${hsTypes.build.number}.zip">
      <zipfileset dir="${artifacts.hsTypes}" prefix="hsTypes ${version}" />
      <zipfileset file="${mps_home}/bin/mps.vmoptions" prefix="hsTypes ${version}/bin" />
      <zipfileset file="${mps_home}/bin/mps.exe.vmoptions" prefix="hsTypes ${version}/bin" />
      <zipfileset dir="${mps_home}/bin/win" prefix="hsTypes ${version}/bin/win">
        <exclude name="**/*.exe" />
      </zipfileset>
      <zipfileset dir="${mps_home}/bin/win" prefix="hsTypes ${version}/bin/win" filemode="755">
        <include name="**/*.exe" />
      </zipfileset>
      <zipfileset file="${mps_home}/mps.sh" prefix="hsTypes ${version}" filemode="755" />
      <zipfileset file="${mps_home}/mps.bat" prefix="hsTypes ${version}" filemode="755" />
    </zip>
    <echo file="${build.layout}/build.properties">hsTypesDistribution.version=${version}${line.separator}hsTypes.date=${hsTypes.date}${line.separator}hsTypes.build.number=${hsTypes.build.number}${line.separator}mpsBootstrapCore.version=${mpsBootstrapCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
</project>